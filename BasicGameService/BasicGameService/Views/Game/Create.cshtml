@model BasicGameService.DTOs.GameCreateDto

@{
    ViewData["Title"] = "Create Game";
}

<h1>Create Game</h1>

<form asp-action="Create" method="post" class="mb-3">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="GameType" class="form-label"></label>
        <select asp-for="GameType" class="form-select" asp-items="Html.GetEnumSelectList<BasicGameService.Models.Enums.GameType>()">
            <option value="">-- Select Type --</option>
        </select>
        <span asp-validation-for="GameType" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
