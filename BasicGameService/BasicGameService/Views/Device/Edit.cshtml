@model BasicGameService.DTOs.DeviceUpdateDto

@{
    ViewData["Title"] = "Edit Device";
    var allGames = ViewBag.AllGames as List<BasicGameService.Models.Game> ?? new List<BasicGameService.Models.Game>();
}

<h1>Edit Device</h1>

<form asp-action="Edit" method="post">
    <input asp-for="Id" type="hidden" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Type" class="form-label"></label>
        <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<BasicGameService.Models.Enums.PlayStationType>()">
            <option value="">-- Select Type --</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="IsAvailable" class="form-check-input" />
        <label asp-for="IsAvailable" class="form-check-label"></label>
    </div>

    <div class="mb-3">
        <label class="form-label">Installed Games</label>
        <select asp-for="InstalledGameIds"
                asp-items="@(new MultiSelectList(allGames, "Id", "Name", Model.InstalledGameIds))"
                multiple
                class="form-select">
        </select>
        <div class="form-text">Hold Ctrl (Windows) / Cmd (Mac) to select multiple.</div>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
