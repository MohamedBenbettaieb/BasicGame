@model List<BasicGameService.Models.Device>

@{
    ViewData["Title"] = "Devices";
}

<h1>Devices</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var device in Model)
        {
            <tr>
                <td>@device.Name</td>
                <td>@device.Type</td>
                <td>@(device.IsAvailable ? "Available" : "In Use")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@device.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@device.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Device</a>
